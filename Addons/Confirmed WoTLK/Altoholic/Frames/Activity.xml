<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="Activity.lua"></Script>

	<Button name="AltoActivityButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="65" y="18"/>
		</Size>
		<ButtonText name="$parentNormalText" justifyH="CENTER">
			<Size>
				<AbsDimension x="60" y="18"/>
			</Size>
			<Anchors>
				<Anchor point="LEFT">
					<Offset>
						<AbsDimension x="0" y="0"/>
					</Offset>
				</Anchor>
			</Anchors>
		</ButtonText>
		<Scripts>
			<OnClick>
				Altoholic.Activity:OnClick(self)
			</OnClick>
		</Scripts>

		<NormalFont style="GameFontNormalSmallLeft"/>
		<HighlightFont style="GameFontHighlightSmallLeft"/>
	</Button>
	
	<Button name="AltoActivityTemplate" virtual="true">
		<Size>
			<AbsDimension x="615" y="22"/>
		</Size>
		<Layers>
			<Layer level="BACKGROUND">
				<FontString name="$parentLevel" inherits="GameFontNormalSmall" justifyH="CENTER">
					<Size>
						<AbsDimension x="55" y="18"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="150" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentCollapse" hidden="true">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT">
						<Offset>
							<AbsDimension x="5" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						Altoholic.Characters:ToggleHeader(self)
						Altoholic.Activity:Update()
					</OnClick>
				</Scripts>
				<NormalTexture name="$parentIcon" file="Interface\Buttons\UI-MinusButton-UP" />
				<HighlightTexture file="Interface\Buttons\UI-PlusButton-Hilight" alphaMode="ADD" />
			</Button>
			
			<Button name="$parentName" id="7">
				<Size>
					<AbsDimension x="170" y="18"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="25" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<ButtonText name="$parentNormalText" justifyH="LEFT">
					<Size>
						<AbsDimension x="170" y="18"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</ButtonText>
				<Scripts>
					<OnEnter>
						Altoholic.Activity:OnEnter(self)
					</OnEnter>
					<OnLeave>
						AltoTooltip:Hide();
					</OnLeave>
				</Scripts>
				<NormalFont style="GameFontNormalSmallLeft"/>
				<HighlightFont style="GameFontHighlightSmallLeft"/>
			</Button>
			<Button name="$parentMails" inherits="AltoActivityButtonTemplate" id="1">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parentLevel" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="5" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						Altoholic.Activity:Mails_OnEnter(self)
					</OnEnter>
					<OnLeave>
						AltoTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button name="$parentLastMailCheck" inherits="AltoActivityButtonTemplate" id="2">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parentMails" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentAuctions" inherits="AltoActivityButtonTemplate" id="3">
				<Size>
					<AbsDimension x="60" y="18"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parentLastMailCheck" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentBids" inherits="AltoActivityButtonTemplate" id="4">
				<Size>
					<AbsDimension x="60" y="18"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parentAuctions" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentLastAHCheck" inherits="AltoActivityButtonTemplate" id="5">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parentBids" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentLastLogout" inherits="AltoActivityButtonTemplate" id="6">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parentLastAHCheck" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="5" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
		</Frames>
	</Button>

