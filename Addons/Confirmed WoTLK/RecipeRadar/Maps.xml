               HideDropDownMenu(1)
               RecipeRadar_ContextMenuGlobal.Vendor = this.Vendor
               ToggleDropDownMenu(1, nil, UnmapVendorDropDown, this:GetName(), 6, 6)
            end
         </OnClick>
      </Scripts>
      <NormalTexture setAllPoints="true" file="Interface\Addons\RecipeRadar\Images\Misc\Scroll"/>
   </Button>

